<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ObstacleList">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbProgressGoalsList"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:layout_marginBottom="50dp"
        app:title="@string/ACTIVITY_TITLE_PROGRESS_GOALS_LIST"
        />

    <ScrollView
        android:id="@+id/svProgressGoalsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tbProgressGoalsList"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProgressGoalsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>