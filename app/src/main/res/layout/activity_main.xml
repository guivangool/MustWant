<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background="@drawable/background_ligth_blue"
    >

    <LinearLayout
        android:id="@+id/flGoals"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_panel"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/tvGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/title_my_goals"
            android:textStyle="bold"
            android:textColor="@color/section_title_color"
            android:textSize="@dimen/section_title_size"/>

        <TextView
            android:id="@+id/tvGoalsNotSelected"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/message_no_goals_selected"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:textSize="16sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMyGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/flGoals"
        android:background="@drawable/background_panel"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="10dp">
    <TextView
        android:id="@+id/tvActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/title_actions"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flGoals"
        android:textStyle="bold"
        android:textColor="@color/section_title_color"
        android:textSize="@dimen/section_title_size"/>


    <LinearLayout
        android:id="@+id/llActionsItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/llActions"
        android:orientation="horizontal"
        android:gravity="center">
    <TextView
        android:id="@+id/tvProgress"
        app:layout_constraintTop_toBottomOf="@+id/tvActions"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="50dp"
        android:layout_width="90dp"
        android:background="@drawable/bg_option_main"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/option_name_register_advance"
        />

    <TextView
        android:id="@+id/tvEmotion"
        app:layout_constraintTop_toBottomOf="@+id/tvActions"
        app:layout_constraintLeft_toRightOf="@+id/tvProgress"
        android:layout_marginLeft="30dp"
        android:layout_height="50dp"
        android:layout_width="90dp"
        android:background="@drawable/bg_option_main"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/option_name_remove_obstacle"
        />

    <TextView
        android:id="@+id/tvManageObstacles"
        app:layout_constraintTop_toBottomOf="@+id/tvActions"
        app:layout_constraintLeft_toRightOf="@+id/tvEmotion"
        android:layout_marginLeft="30dp"

        android:layout_height="50dp"
        android:layout_width="90dp"
        android:background="@drawable/bg_option_main"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/option_name_admin_obstacles"
        />
    </LinearLayout>
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_action_needed"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/llActions"
            app:layout_constraintBottom_toTopOf="@id/llConfig"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
    />
    <LinearLayout
        android:id="@+id/llConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/clMain"
        android:background="@drawable/background_panel"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="10dp">
    <TextView
        android:id="@+id/tvConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/title_configuration"
        android:layout_gravity="left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llActions"
        android:textStyle="bold"
        android:textSize="@dimen/section_title_size"
        android:textColor="@color/section_title_color"/>

    <LinearLayout
        android:id="@+id/llConfigItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvConfig"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvSetGoalOption"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_option_main"
            android:gravity="center"
            android:text="@string/option_name_select_goals"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvConfig" />

        <TextView
        android:id="@+id/tvAssignMotivation"
        app:layout_constraintTop_toBottomOf="@+id/tvConfig"
        app:layout_constraintLeft_toRightOf="@+id/tvSetGoalOption"
        android:layout_height="50dp"
        android:layout_width="90dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bg_option_main"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/option_name_create_inspiration"
        />
        <TextView
            android:id="@+id/tvStartAgain"
            app:layout_constraintTop_toBottomOf="@+id/tvConfig"
            app:layout_constraintLeft_toRightOf="@+id/tvAssignMotivation"
            android:layout_height="50dp"
            android:layout_width="90dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_option_main"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/option_name_start_again"
            />
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>