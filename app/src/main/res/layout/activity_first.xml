<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FirstActivity"
    android:background="@drawable/background_ligth_blue">

    <LinearLayout
        android:id="@+id/llWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:paddingBottom="50dp"
        android:paddingTop="50dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tvWelcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/llWelcome"
        android:layout_margin="10dp"
        android:paddingBottom="75dp"
        android:paddingTop="75dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="$ 3.389,61"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="36sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llCreditCards"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_panel_main_actions"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/llBalance">

        <TextView
            android:id="@+id/tvCreditCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="MIS TARJETAS DE CRÉDITO"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/section_title_size"/>

        <TextView
            android:id="@+id/tvNoCreditCards"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="No asociaste tarjetas aún."
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:textSize="@dimen/GoalFontSize"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMyCreditCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/llCreditCards"
        android:background="@drawable/bg_panel_main_actions"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/tvActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="ACCIONES"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/section_title_size"/>

        <LinearLayout
            android:id="@+id/llActionsItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/llActions"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvGenerateQR"
                android:layout_height="50dp"
                android:layout_width="90dp"
                android:background="@drawable/bg_option_main"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Generar QR" />

            <TextView
                android:id="@+id/tvPay"
                android:layout_marginLeft="30dp"
                android:layout_height="50dp"
                android:layout_width="90dp"
                android:background="@drawable/bg_option_main"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Pagar" />

            <TextView
                android:id="@+id/tvAddCreditCards"
                android:layout_marginLeft="30dp"
                android:layout_height="50dp"
                android:layout_width="90dp"
                android:background="@drawable/bg_option_main"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Agregar tarjetas" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>