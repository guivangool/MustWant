<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".Activities.SelectGoals"    android:orientation="vertical"    android:background="@color/blue_background_initial">    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/clGoals"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="@drawable/background_panel"        android:layout_margin="10dp"        >        <TextView            android:id="@+id/tvExplanation"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:gravity="center"            android:textSize="@dimen/MainMessageSize"            android:text="@string/select_goals_explanation"            android:textStyle="bold"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent"            android:padding="20dp"/>    <TextView        android:id="@+id/GoalMe"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="@string/GoalMe"        android:textSize="@dimen/GoalFontSize"        android:gravity="center"        android:background="@drawable/bg_goals"        android:layout_margin="10dp"        android:padding="15dp"        android:textStyle="bold"        app:layout_constraintTop_toBottomOf="@+id/tvExplanation"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent" />        <LinearLayout            android:id="@+id/llDaysGoalMe"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            app:layout_constraintTop_toBottomOf="@+id/GoalMe"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent">        <androidx.fragment.app.FragmentContainerView            android:id="@+id/fragment_GoalMe_Days"            android:layout_width="match_parent"            android:layout_height="wrap_content"            />        </LinearLayout>    <TextView        android:id="@+id/GoalHome"        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:layout_constraintTop_toBottomOf="@+id/llDaysGoalMe"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:text="@string/GoalHome"        android:textSize="@dimen/GoalFontSize"        android:gravity="center"        android:background="@drawable/bg_goals"        android:layout_margin="10dp"        android:padding="15dp"        android:textStyle="bold"/>        <LinearLayout            android:id="@+id/llDaysGoalHome"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            app:layout_constraintTop_toBottomOf="@+id/GoalHome"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent">        <androidx.fragment.app.FragmentContainerView            android:id="@+id/fragment_GoalHome_Days"            android:layout_width="match_parent"            android:layout_height="wrap_content"            />        </LinearLayout>    <TextView        android:id="@+id/GoalWork"        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:layout_constraintTop_toBottomOf="@+id/llDaysGoalHome"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:text="@string/GoalWork"        android:textSize="@dimen/GoalFontSize"        android:gravity="center"        android:background="@drawable/bg_goals"        android:layout_margin="10dp"        android:padding="15dp"        android:textStyle="bold"/>        <LinearLayout            android:id="@+id/llDaysGoalWork"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            app:layout_constraintTop_toBottomOf="@+id/GoalWork"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent">        <androidx.fragment.app.FragmentContainerView            android:id="@+id/fragment_GoalWork_Days"            android:layout_width="match_parent"            android:layout_height="wrap_content"            />        </LinearLayout>    <TextView        android:id="@+id/GoalRelations"        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:layout_constraintTop_toBottomOf="@+id/llDaysGoalWork"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:text="@string/GoalRelations"        android:textSize="@dimen/GoalFontSize"        android:gravity="center"        android:background="@drawable/bg_goals"        android:layout_margin="10dp"        android:padding="15dp"        android:textStyle="bold"/>        <LinearLayout            android:id="@+id/llDaysGoalRelations"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            app:layout_constraintTop_toBottomOf="@+id/GoalRelations"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintEnd_toEndOf="parent">        <androidx.fragment.app.FragmentContainerView            android:id="@+id/fragment_GoalRelations_Days"            android:layout_width="match_parent"            android:layout_height="wrap_content"            />        </LinearLayout>        <androidx.fragment.app.FragmentContainerView            android:id="@+id/fragment_accept_cancel"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:layout_constraintBottom_toBottomOf="parent"            />    </androidx.constraintlayout.widget.ConstraintLayout></LinearLayout>